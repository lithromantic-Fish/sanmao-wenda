/* pages/questionDetail/questionDetail.wxss */

.wrap {
  background-color: #f1f2f3;
  height :auto;

}

.replyType {
  width: 100%;
  height: 88rpx;
  display: flex;
}

.flex_voice {
  flex: 1;
  background: linear-gradient(90deg, rgba(0, 174, 255, 1) 0%, rgba(0, 120, 255, 1) 100%);
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  display: flex;
  justify-content: center;
  align-items: center;
  color: rgba(255, 255, 255, 1);
  line-height: 45rpx;
}

.flex_text {
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
  line-height: 45rpx;
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgba(211, 211, 211, 1);
}

.text_view{
  font-size:26rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(153,153,153,1);
  line-height:37rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx
}
.wxParse-inline{
 font-size:30rpx!important;
font-family:PingFang-SC-Medium;
font-weight:500;
