/* pages/answerQuesion/answerQuesion.wxss */

.wrap_question {
  width: 750rpx;
  height: 450rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.wrap_question image {
  width: 301rpx;
  height: 301rpx;
}

.wrap_question text {
  font-size: 32rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(153, 153, 153, 1);
  line-height: 45rpx;
  margin-top: 30rpx;
}

.view_peo {
  width: 100%;
  height: 70rpx;
  background-color: #f1f2f3;
  display: flex;
  align-items: center;
  padding-left: 31rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(153, 153, 153, 1);
  line-height: 37rpx;
}

.view_count {
}
.item_answer{
  height: auto;
  width: 100%;
}
.text_time{
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(153,153,153,1);
  line-height:33rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin: 0 65rpx;
  border-bottom:1px solid #E3E4E8;
  padding-bottom:20rpx;


}
/* 录音 */

.ly {
  margin: 40rpx 65rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.default {
  box-sizing: border-box;
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  background: #e5f4ff url('https://static.hrloo.com/hrloo56/wendamiapp/img/ic_msg2.png') no-repeat 20rpx center /40rpx 40rpx;
  border-radius: 40rpx;
  padding-right: 40rpx;
  text-align: right;
  color: #0092ff;
  font-size: 28rpx;
}
.say{
    box-sizing: border-box;
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  background: #e5f4ff url('https://static.hrloo.com/hrloo56/wendamiapp/img/ic_say.gif') no-repeat 30rpx center / 20rpx 26rpx;
  border-radius: 40rpx;
  padding-right: 40rpx;
  text-align: right;
  color: #0092ff;
  font-size: 28rpx;
}

.ly image{
  width:34rpx;
  height: 34rpx;
}
.submit{
  width:100%;
height:98rpx;
background:linear-gradient(90deg,rgba(0,174,255,1) 0%,rgba(0,120,255,1) 100%);
display: flex;
justify-content: center;
align-items: center;
position: fixed;
bottom: 0;

}
.submit text{
  font-size:32rpx;
font-family:PingFang-SC-Medium;
font-weight:500;
color:rgba(255,255,255,1);
line-height:45rpx;

}