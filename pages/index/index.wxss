page {
  background-color: #f1f2f3;
  padding-bottom: 160rpx !important;
}

.wrap_tabs {
  width: 750rpx;
  height: 80rpx;
  background-color: #fff;
  display: flex;
  /* justify-content: space-between */
  border-bottom: 1px solid #dcdde3;
}

.flex_item {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  line-height: 42rpx;
  position: relative;
}

.active {
    display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  line-height: 42rpx;
  position: relative;
  
  font-weight: bold;
  color: #0092ff;
}

.active::before {
  position: absolute;
  content: ' ';
  width: 100%;
  height: 4rpx;
  left: 0;
  bottom: 0;
  background-color: #0092FF;
}

.flex_item.line:after {
  position: absolute;
  content: ' ';
  right: 0;
  top: 50%;
  transform: translate(0, -50%);
  width: 1rpx;
  height: 50rpx;
  background-color: #dcdde3;
}
