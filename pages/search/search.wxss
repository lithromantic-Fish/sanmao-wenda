/* 标签 */

.labels-layout {
  padding: 20rpx;
}

.labels-layout .tt {
  font-size: 34rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  line-height: 48rpx;
}

.labels-layout .ct {
  /* display: flex;
  flex-direction: row;
  flex-wrap: wrap; */
  
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
}

.labels-layout .ct text {
  flex: 0 0 32%;
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  text-align: center;
  font-size: 26rpx;
  color: rgba(102, 102, 102, 1);
  margin: 20rpx 2% 0 0;
}

.labels-layout .ct text.mr0 {
  margin-right: 0;
}
