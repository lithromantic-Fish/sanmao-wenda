/* components/Dialog/dialog.wxss */

.wx-mask {
  position: fixed;
  z-index: 98;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.wx-dialog {
  position: fixed;
  z-index: 99;
  width: 80%;
  max-width: 620rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #fff;
  text-align: center;
  border-radius: 6rpx;
}

.wx-dialog-title {
  font-size: 36rpx;
  padding: 30rpx 30rpx 10rpx;
}

.wx-dialog-content {
  padding: 30rpx;
  min-height: 80rpx;
  font-size: 32rpx;
  line-height: 1.3;
  word-wrap: break-word;
  word-break: break-all;
  color: #999;
}

.wx-dialog-footer {
  display: flex;
  align-items: center;
  position: relative;
  line-height: 90rpx;
  font-size: 34rpx;
}

.img-1 {
  display: block;
  width: 283rpx;
  height: 191rpx;
  margin: -110rpx auto 0;
}

.tit {
  margin-top: 50rpx;
  color: #0092ff;
  font-size: 36rpx;
}

.intro {
  margin-top: 40rpx;
  color: #a9a9a9;
  font-size: 28rpx;
}

.btn {
  display: block;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  background-image: linear-gradient(90deg, #00aeff 0%, #0078ff 100%),
                      linear-gradient(#29a1f7, #29a1f7);
  background-blend-mode: normal, normal;
  border-radius: 10rpx;
  margin-top: 60rpx;
}

.close-btn {
  position: absolute;
  right: 0;
  top: -70rpx;
  width: 29rpx;
  height: 29rpx;
  background: url('https://static.hrloo.com/hrloo56/classminiapp/img/dialog/icon_close.png') no-repeat 0 0;
  background-size: 29rpx 29rpx;
  z-index: 101;
}

button::after {
  border: 0 none !important;
}

button::before {
  border: 0 none !important;
}
