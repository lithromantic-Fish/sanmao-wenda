/* components/navigation/navigation.wxss */

.nav-header {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  
  background-image: linear-gradient(90deg, #00aeff 0%, #0078ff 100%),
                      linear-gradient(#29a1f7, #29a1f7);
  background-blend-mode: normal, normal;
}

.title-bar {  
  display: flex;
  justify-content: space-between;
  align-items: center;
  text-align: center;
}

.nav-header-btn {
  width: 32%;
  height: 100%;
}

.navigation-back {
  width: 40%;
  height: 100%;
  background: url('data:image/png;base64,') no-repeat 20rpx center;
  background-size: 20rpx 35rpx;
}

.navigation-title {
  max-width: 44%;
	font-size: 38rpx;
  font-weight: bold;
  color: #fff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
