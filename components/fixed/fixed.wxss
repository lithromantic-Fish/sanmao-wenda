/* components/fixed/fixed.wxss */

.fixed-btns {
  position: fixed;
  bottom: 250rpx;
  right: 30rpx;
  z-index: 6;
}

.fixed-btns .fx-item {
  position: relative;
  display: block;
  text-align: center;
  width: 112rpx;
  height: 112rpx;
  line-height: 112rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-top: 20rpx;
}

.bg-music image {
  width: 100%;
  height: 100%;
}

.bg-music navigator {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
  border-radius: 50%;
  overflow: hidden;
  background-color: rgba(0, 0, 0, .5);
}
.fixed-btns .btn::after { border: none; }
